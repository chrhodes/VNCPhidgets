        <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
        <FileVersion>2026.02.11</FileVersion>
        <Company>VNC</Company>
        <Description>Phidget22 Explorer Core</Description>
