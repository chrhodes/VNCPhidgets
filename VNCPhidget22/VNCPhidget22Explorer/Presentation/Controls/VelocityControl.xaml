    <dxlc:LayoutGroup x:Name="lgMain" View="GroupBox" Header="Velocity Limit"
                      Orientation="Horizontal"  Padding="-10" >

        <!--<dxlc:LayoutGroup  View="Group" Orientation="Horizontal" >-->

            <dxlc:LayoutItem Label="Min" LabelPosition="Top" LabelHorizontalAlignment="Left" >
                <dxe:TextEdit Text="{Binding MinVelocityLimit, Mode=OneWay}" IsReadOnly="True" 
                              Mask="d"  MaskType="Numeric" MaskUseAsDisplayFormat="True"
                              MinWidth="30" />
            </dxlc:LayoutItem>

            <dxlc:LayoutItem Label="+/- VelocityLimit" LabelPosition="Top" LabelHorizontalAlignment="Center" >

                <dxlc:LayoutGroup View="Group" Orientation="Horizontal" VerticalAlignment="Bottom" >
                    <RadioButton GroupName="Scale" Click="VelocityIncrement_Click" FlowDirection="RightToLeft" >1000</RadioButton>
                    <RadioButton GroupName="Scale" Click="VelocityIncrement_Click" FlowDirection="RightToLeft">100</RadioButton>
                    <RadioButton GroupName="Scale" Click="VelocityIncrement_Click" FlowDirection="RightToLeft">10</RadioButton>
                    <RadioButton GroupName="Scale" Click="VelocityIncrement_Click" FlowDirection="RightToLeft" IsChecked="True">1</RadioButton>
                    <dxe:SpinEdit 
                        x:Name="seVelocityLimit" 
                        EditValue="{Binding VelocityLimit, Mode=TwoWay, 
                            TargetNullValue=0,
                            Converter={StaticResource SpinEditConverter}}" 
                        Increment="1"
                        MinValue="{Binding MinVelocityLimit, Mode=OneWay, TargetNullValue=0}"
                        MaxValue="{Binding MaxVelocityLimit, Mode=OneWay, TargetNullValue=0}" 
                        Mask="d" MaskType="Numeric" MaskUseAsDisplayFormat="True"
                        IsFloatValue="False" 
                        EditValueChanged="SpinEdit_EditValueChanged"/>
                </dxlc:LayoutGroup>

            </dxlc:LayoutItem>

            <dxlc:LayoutItem Label="Max" LabelPosition="Top" LabelHorizontalAlignment="Right" HorizontalContentAlignment="Right" >
                <dxe:TextEdit  Text="{Binding MaxVelocityLimit, Mode=OneWay}" IsReadOnly="True" 
                              Mask="d"  MaskType="Numeric" MaskUseAsDisplayFormat="True"
                              MinWidth="30"/>
            </dxlc:LayoutItem>

        <!--</dxlc:LayoutGroup>-->

    </dxlc:LayoutGroup>

</vncmvvm:ViewBase>